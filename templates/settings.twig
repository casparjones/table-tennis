<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Cash -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cash/8.1.1/cash.min.js"></script>
    <!-- socket.io -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.1/socket.io.js" integrity="sha512-9mpsATI0KClwt+xVZfbcf2lJ8IFBAwsubJ6mI3rtULwyM3fBmQFzj0It4tGqxLOGQwGfJdk/G+fANnxfq9/cew==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/assets/css/custom.css" rel="stylesheet">

</head>
<body>
<h1 class="settings">Spiel Settings</h1>
<div class="container">
    <div style="margin: 15px 0; text-align: right">
        <button class="switch-mode btn btn-success">switch Mode</button>
        <button class="reset btn btn-danger">reset</button>
    </div>

    <div style="display: flex">
        <div>Game-Mode: </div>
        <div id="mode">21</div>
    </div>

    <form id="contactForm">
        <div id="player1">
            <div class="form-floating mb-3">
                <div class="point-row">
                    <input class="form-control name" type="text" placeholder="Player 1" data-sb-validations="required" />
                    <button class="btn btn-light save" data-player="1">💾</button>
                    <button class="btn btn-light ball" data-player="1">🏓</button>
                </div>
            </div>
            <div class="form-floating mb-3">
                <div class="point-row">
                    <button class="btn btn-danger decPoint" data-player="1">-</button>
                    <input class="form-control points" type="text" placeholder="0" data-sb-validations="required" />
                    <button class="btn btn-success addPoint" data-player="1">+</button>
                </div>
            </div>
        </div>
        <div id="player2">
            <div class="form-floating mb-3">
                <div class="point-row">
                    <input class="form-control name" type="text" placeholder="Player 2" />
                    <button class="btn btn-light save" data-player="2">💾</button>
                    <button class="btn btn-light ball" data-player="2">🏓</button>
                </div>
            </div>
            <div class="form-floating mb-3">
                <div class="point-row">
                    <button class="btn btn-danger decPoint" data-player="2">-</button>
                    <input class="form-control points" type="text" placeholder="0" data-sb-validations="required" />
                    <button class="btn btn-success addPoint" data-player="2">+</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
window.socket_host = {{ .socket_host }}
</script>

<script type="module" src="/assets/js/tt-settings.mjs" ></script>
<script src="/assets/bootstrap/js/bootstrap.bundle.min.js"  integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

</body>
</html>